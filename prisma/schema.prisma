generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime @default(now())
  description  String
  image        String
  repository   String?
  technologies String[]
  title        String
  updatedAt    DateTime @updatedAt
  web_site     String?
}
